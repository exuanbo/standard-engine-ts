{
  "name": "standard-engine-ts",
  "version": "0.8.1-0",
  "description": "Yet another ESLint wrapper written in TypeScript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "clean": "rm -rf .cache dist",
    "dts": "tsc -p tsconfig.dts.json",
    "bundle": "rollup -c",
    "build": "npm run clean && npm run dts && npm run bundle",
    "lint": "./scripts/cmd.js",
    "lint:fix": "./scripts/cmd.js --fix",
    "test": "npm run build && npm run lint && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exuanbo/standard-engine-ts.git"
  },
  "keywords": [
    "standard-engine",
    "standard",
    "typescript",
    "eslint",
    "lint"
  ],
  "author": "exuanbo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exuanbo/standard-engine-ts/issues"
  },
  "homepage": "https://github.com/exuanbo/standard-engine-ts#readme",
  "peerDependencies": {
    "eslint": "^7.32.0"
  },
  "dependencies": {
    "@types/eslint": "^7.28.0",
    "look-it-up": "^2.0.0",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/minimist": "1.2.2",
    "@types/node": "16.9.1",
    "copy-anything": "2.0.3",
    "esbuild": "0.12.28",
    "eslint": "7.32.0",
    "jest": "27.2.0",
    "rollup": "2.56.3",
    "rollup-plugin-dts": "4.0.0",
    "rollup-plugin-esbuild-transform": "1.1.1",
    "ts-jest": "27.0.5",
    "ts-standardx": "0.8.1",
    "typescript": "4.4.3"
  }
}
