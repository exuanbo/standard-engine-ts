{
  "name": "standard-engine-ts",
  "version": "0.6.0",
  "description": "Yet another ESLint wrapper written in TypeScript.",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "__tests__"
  },
  "scripts": {
    "clean": "rimraf dist .cache",
    "dts": "tsc -d --emitDeclarationOnly --declarationDir .cache",
    "bundle": "rollup -c",
    "build": "npm run clean && npm run dts && npm run bundle",
    "lint": "./scripts/cmd.js",
    "lint:fix": "./scripts/cmd.js --fix",
    "test": "npm run build && npm run lint && jest --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exuanbo/standard-engine-ts.git"
  },
  "keywords": [
    "standard-engine",
    "standard",
    "typescript",
    "eslint",
    "lint"
  ],
  "author": "exuanbo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exuanbo/standard-engine-ts/issues"
  },
  "homepage": "https://github.com/exuanbo/standard-engine-ts#readme",
  "dependencies": {
    "@types/eslint": "7.2.14",
    "look-it-up": "2.0.0",
    "minimist": "1.2.5"
  },
  "devDependencies": {
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-typescript": "8.2.1",
    "@types/jest": "26.0.24",
    "@types/minimist": "1.2.2",
    "@types/node": "16.0.0",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "copy-anything": "2.0.3",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-config-standard-with-typescript": "20.0.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "jest": "27.0.6",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "rollup": "2.52.8",
    "rollup-plugin-dts": "3.0.2",
    "ts-jest": "27.0.3",
    "tslib": "2.3.0",
    "typescript": "4.3.5"
  }
}
