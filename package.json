{
  "name": "standard-engine-ts",
  "version": "0.1.4",
  "description": "Yet another ESLint wrapper written in TypeScript.",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist .cache",
    "dts": "tsc -d --emitDeclarationOnly --declarationDir .cache",
    "bundle": "rollup -c",
    "build": "yarn clean && yarn dts && yarn bundle",
    "lint": "./test/cmd.js",
    "lint:fix": "./test/cmd.js --fix",
    "test": "yarn build && yarn lint && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exuanbo/standard-engine-ts.git"
  },
  "keywords": [
    "standard-engine",
    "standard",
    "typescript",
    "eslint",
    "lint"
  ],
  "author": "exuanbo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exuanbo/standard-engine-ts/issues"
  },
  "homepage": "https://github.com/exuanbo/standard-engine-ts#readme",
  "dependencies": {
    "@types/eslint": "7.2.4",
    "minimist": "1.2.5",
    "utility-types": "3.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "16.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "10.0.0",
    "@rollup/plugin-typescript": "6.1.0",
    "@types/jest": "26.0.15",
    "@types/minimist": "1.2.0",
    "@types/node": "14.14.6",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-config-standard": "16.0.1",
    "eslint-config-standard-with-typescript": "19.0.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.2",
    "get-stdin": "8.0.0",
    "jest": "26.6.3",
    "look-it-up": "1.1.0",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "rollup": "2.33.1",
    "rollup-plugin-cleanup": "3.2.1",
    "rollup-plugin-dts": "1.4.13",
    "ts-jest": "26.4.4",
    "tslib": "2.0.3",
    "typescript": "4.0.5",
    "xdg-basedir": "4.0.0"
  }
}
